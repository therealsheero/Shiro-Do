{
  "manifest_version": 3,
  "name": "To-Do App",
  "description": "A simple to-do list extension to manage your tasks.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "notepad.png",
      "48": "notepad.png",
      "128": "notepad.png"
    }
  },
  "permissions": ["storage"]
}
